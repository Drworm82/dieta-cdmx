    "desayuno": {
      "nombre": "Avena con plátano",
      "ingredientes": [
        "½ taza de avena",
        "1 plátano",
        "Canela al gusto",
        "1 taza de leche o agua"
      ],
      "preparacion": [
        "Cocina la avena en leche o agua durante 7 minutos.",
        "Agrega rodajas de plátano y canela al gusto.",
        "Sirve caliente."
      ],
      "tiempo": "10 minutos",
      "costo_aprox": 6.5
    },
    "comida": {
      "nombre": "Lentejas con arroz y jitomate",
      "ingredientes": [
        "½ taza de lentejas",
        "½ taza de arroz",
        "2 jitomates",
        "1 diente de ajo",
        "1/2 cebolla"
      ],
      "preparacion": [
        "Cocina las lentejas en agua con ajo y cebolla.",
        "Prepara arroz blanco por separado.",
        "Saltea jitomate picado y mezcla con las lentejas.",
        "Sirve lentejas con arroz caliente."
      ],
      "tiempo": "30 minutos",
      "costo_aprox": 12
    },
    "cena": {
      "nombre": "Tostadas de pollo con lechuga",
      "ingredientes": [
        "2 tostadas",
        "100g de pollo cocido y deshebrado",
        "Lechuga picada",
        "Crema al gusto",
        "Salsa al gusto"
      ],
      "preparacion": [
        "Coloca el pollo deshebrado sobre las tostadas.",
        "Agrega lechuga, crema y salsa al gusto.",
        "Disfruta."
      ],
      "tiempo": "15 minutos",
      "costo_aprox": 10
    }
  },
  {
